<h1>Crypto Listings</h1>
<br/>
<br/>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Cost Per</th>
      <th>Amount Purchased</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <% if crypto.user_id == current_user.id %>
        <% if crypto.symbol %>
          <% crypto.symbol = crypto.symbol.upcase %>
        <% end %>
      <tr>
        <% for x in @search_crypto %>
          <% if crypto.symbol == x["symbol"] %>
            <td><%= link_to x["name"], crypto %></td>
          <% end %>
      <% end %>

      <td><%= crypto.symbol %></td>
      <td><%= crypto.cost_per %></td>
      <td><%= crypto.amount_purchased %></td>
      <td><%= link_to "edit", edit_crypto_path(crypto) %></td>
      <td><%= link_to "delete", crypto, method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
   <% end %>
  <% end %>

  </tbody>
</table>

<%= link_to "Add new", new_crypto_path, class: "btn btn-primary" %>