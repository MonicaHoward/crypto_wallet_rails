<h1>Crypto Listings</h1>
<br/>
<br/>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>User ID</th>
      <th>Cost Per</th>
      <th>Amount Purchased</th>
      <th>colspan="3"</th>
    </tr>
  </thead>

  <tbody>
   <% @cryptos.each do |crypto| %>
    <% if crypto.user_id == current_user.lid %>
    <tr>
      <td><%= crypto.symbol %></td>
      <td><%= crypto.user_id %></td>
      <td><%= crypto.cost_per %></td>
      <td><%= crypto.amount_purchased %></td>
      <td><%= link_to "show", crypto %></td>
      <td><%= link_to "edit", edit_crypto_path(crypto) %></td>
      <td><%= link_to "delete", crypto, method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
   <% end %>
    <% end %>
  </tbody>
</table>