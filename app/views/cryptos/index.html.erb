<h1>Crypto Listings</h1>
<br/>
<br/>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rank</th>
      <th>Current Price</th>
      <th>Total Value</th>
      <th>Profit/Loss</th>
      <th>Symbol</th>
      <th>Cost At Purchase</th>
      <th>Amount Purchased</th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <% if crypto.user_id == current_user.id %>
        <% if crypto.symbol %>
          <% crypto.symbol = crypto.symbol.upcase %>
        <% end %>
      <tr>
        <% for x in @search_crypto["data"].values %>
          <% if crypto.symbol == x["symbol"] %>
            <td><%= link_to x["name"], crypto %></td>
            <td><%= x["rank"]%></td>
            <td><%= number_to_currency(x["quotes"]["USD"]["price"]) %></td>
            <td><%= number_to_currency(x["quotes"]["USD"]["price"].to_d * crypto.amount_purchased) %></td>
            <% pnl = (x["quotes"]["USD"]["price"].to_d * crypto.amount_purchased) - (crypto.cost_per * crypto.amount_purchased) %>
            <td><%= number_to_currency(pnl) %></td>

      <% end %>
      <% end %>

      <td><%= crypto.symbol %></td>
      <td><%= crypto.cost_per %></td>
      <td><%= crypto.amount_purchased %></td>
    </tr>
   <% end %>
  <% end %>

  </tbody>
</table>

<%= link_to "Add new", new_crypto_path, class: "btn btn-primary" %>