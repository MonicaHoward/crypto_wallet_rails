<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Coin Lookup</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      <%= form_tag home_search_path, :method => 'POST' do %>
        <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol', size: 50 %>
        <%= submit_tag 'Lookup Crypto' %>
      <% end %>
    </div>
  </div>
</div>

<br/><br/>

<% @symbol %>

<% if @symbol %>
  <% for x in @coin_search %>
    <% if @symbol == x["symbol"] %>
      <%= x["name"] %>: $<%= x["price_usd"] %><br/>
      Rank: <%= x["rank"] %><br/><br/>
    <% end %>
  <% end %>
<% end %>